{
  "compilerOptions": {
    "noImplicitAny": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "^*": [
        "./static/src/ts*"
      ]
    },
    "typeRoots" : [
      "node_modules/@types/",
      "static/src/ts/types/"
    ]
  },
  "include": [
    "static/src/"
  ]
}
